- @extra_stylesheet = ['admin/buttons']
- content_for :breadcrumb do
  %ul.breadcrumb
    %li
      = link_to content_tag(:span, 'Pages'), admin_pages_path
    %li
      = content_tag :span, h(@page.name)

%p
  %b Name:
  %span= h(@page.name)

- unless @page.body.blank?
  %p
    %b Content body:
    %span= @page.body
%hr

.i_buttons{ :style => 'margin-top: 15px;' }
  = link_to 'Back', admin_pages_path, :class => :arrow_left
  = link_to 'Edit', edit_admin_page_path(@page), :class => :page_edit
