- @extra_stylesheet = ['admin/buttons']
- content_for :breadcrumb do
  %ul.breadcrumb
    %li
      = content_tag :span, 'Pages'

- unless @pages.blank?
  %table.qtable{ :style => 'width: 30%' }
    %tr
      %th #
      %th Name
      %th{ :colspan => 3 } actions

    - @pages.each_with_index do |page, index|
      %tr
        %td= index + 1
        %td= link_to h(page.name), edit_admin_page_path(page)
        %td= link_to 'show', admin_page_path(page)
        %td= link_to 'edit', edit_admin_page_path(page)
        %td= link_to 'delete', admin_page_path(page), :method => :delete, :confirm => 'Are you sure?'

- else
  %p no pages has been found... Just go ahead and add some ;)

%hr
.i_buttons{ :style => 'margin-top: 15px;' }
  = link_to 'new page', new_admin_page_path, :class => :page_add
